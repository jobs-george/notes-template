% notes package
% 
\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{notes}[2024/01/01 v0.01 LaTeX package for taking notes]

% can input accented words like résumé
\RequirePackage[utf8]{inputenc}

% empty meta
\date{}
\author{}

% generic formatting
\RequirePackage{hyperref}
\RequirePackage[parfill]{parskip}
\RequirePackage{color,soul}

% add white space to arrays
\renewcommand{\arraystretch}{1.4}

% for non-tikz graphics
\RequirePackage{graphicx}

% math packages
\RequirePackage{amsmath,amssymb,mathtools}

% tikz graphics (if built already don't rebuild)
\RequirePackage[mode=buildnew]{standalone}
\RequirePackage{tikz}

% code blocks
\RequirePackage{verbatim}

% make subsection italic
\RequirePackage{sectsty}
\subsubsectionfont{\itshape}

% remove section numbering
\setcounter{secnumdepth}{0}

% custom box
\newenvironment{important}
{\begin{center}
\renewcommand{\arraystretch}{1}
\begin{tabular}{| p{0.95\textwidth} |}
\hline\\
}
{ 
\\
\hline
\end{tabular} 
\end{center}
}

% custom vector
\newcommand{\bvec}[1]{\boldsymbol{#1}}

% custom vector projection (vpj)
\newcommand{\vpj}[2]{\boldsymbol{{#1}_{\parallel {#2}}}}

% custom vector rejection (vrj)
\newcommand{\vrj}[2]{\boldsymbol{{#1}_{\perp {#2}}}}

% vector norm
\newcommand{\norm}[1]{\left\lVert{#1}\right\rVert}

\endinput
